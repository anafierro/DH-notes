<%- include('header') -%>

<h1>Película a Editar:  <%= pelicula.title %></h1>
    <section class="formulario">
        <form action="/peliculas/editar/<%= pelicula.id %>?_method=PUT" method="POST">
            <label for="title">Título </label>
            <p><input type="text" name="title" id="title" value="<%= pelicula.title %>" required></p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="rating" value="<%= pelicula.rating %>" required></p>
            <label for="awards">Premios </label>
            <p><input type="number" name="awards" id="awards" value="<%= pelicula.awards %>" required></p>
            <label for="release_date">Fecha de estreno </label>
            <p><input type="date" name="release_date" id="release_date" value="<%= pelicula.release_date %>" required></p>
            <label for="length">Duración </label>
            <p><input type="number" name="length" id="" value="<%= pelicula.length %>" required></p>
            <label for="">Género</label>
            <select name="genre_id">
                <% for(i=0; i < generos.length; i++) { %>
                    <% if(generos[i].id == pelicula.genre_id) { %>
                        <option value="<%= generos[i].id %>" selected>
                            <%= generos[i].name %>
                        </option>
                    <%} else { %>
                        <option value="<%= generos[i].id %>">
                            <%= generos[i].name %>
                        </option>
                     <% } %>
                <% } %>
            </select>
            <br>
            <p> <button type="submit">Actualizar</button>
        
            <a  class="botonVolver" href="/peliculas">Listado de Películas</a></p>
        </form>
    </section>

<%- include('footer') -%>
